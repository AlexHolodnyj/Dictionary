<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.words.AddNewTranslatedWordFragment">


    <EditText
        android:id="@+id/word_et"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Word"
        android:inputType="text"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/translate_et"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="Translate"
        android:inputType="text"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/word_et"
        app:layout_constraintStart_toStartOf="@+id/word_et"
        app:layout_constraintTop_toBottomOf="@+id/word_et" />

    <CheckBox
        android:id="@+id/isKnown_cb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Already know this word"
        app:layout_constraintStart_toStartOf="@+id/translate_et"
        app:layout_constraintTop_toBottomOf="@+id/translate_et" />

    <Button
        android:id="@+id/add_new_translatedWord_btn"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Add"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/translate_et"
        app:layout_constraintStart_toStartOf="@+id/translate_et"
        app:layout_constraintTop_toBottomOf="@+id/isKnown_cb" />
</androidx.constraintlayout.widget.ConstraintLayout>